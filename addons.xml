<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>


<addon id="plugin.video.dijentertainments" name="DIJ Entertainments" version="1.0.2" provider-name="MetalKettle">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.simplejson" version="3.3.0"/>
    <import addon="script.module.urlresolver"  version="2.1.2"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">dij entertainments is a plugin for all </summary>
    <description lang="en">we have tvshows movies workout stuff howtoo recipes and more to come</description>
    <platform>all</platform>
  </extension>
</addon>


<addon id="repository.Mr-Smiths-Repo" name="Mr-Smiths-Repo" version="1.0.0" provider-name="Mr-Smith">
	<extension point="xbmc.addon.repository" name=" Mr-Smiths-Repo">
		<info compressed="false">https://raw.githubusercontent.com/djjohnnyb15/Mr-Smiths-Repo/master/addons.xml</info>
			<checksum>https://raw.githubusercontent.com/djjohnnyb15/Mr-Smiths-Repo/master/addons.xml.md5</checksum>
